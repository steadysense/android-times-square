<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calendar_day_height"
                tools:layout_width="50dp">

    <View
        android:id="@+id/calendar_day_background_very_fertile"
        android:background="#F0879B"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="25dp" />
    <View
        android:id="@+id/calendar_day_background_extended_fertile"
        android:background="#80FF6E8C"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="25dp" />
    <ImageView
        android:id="@+id/calendar_day_background_left"
        android:src="@drawable/calendar_day_background_left"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="0dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/calendar_day_background_right"
        android:src="@drawable/calendar_day_background_right"
        android:layout_marginTop="2dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/calendar_day_background_round"
        android:src="@drawable/calendar_day_background_round"
        android:layout_marginTop="2dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/calendar_day_image_view_attach_patch"
        android:layout_width="34dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_patchklebetag"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/calendar_day_image_view_heart"
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_heart"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/calendar_day_image_view_heart_large"
        android:layout_width="26dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_heart_large"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/calendar_day_image_view_point"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:src="@drawable/ic_point"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/calendar_day_image_view_pregnancytest"
        android:layout_width="26dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_pregnancytest"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/calendar_day_text_view"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16dp"
        tools:text="12"/>
</RelativeLayout>
